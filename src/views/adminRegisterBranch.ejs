  </head>

  <body>
    <nav
      class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light"
      id="ftco-navbar"
    >
      <div class="container">
        <a class="navbar-brand" href="/adminHome">Rappi</a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#ftco-nav"
          aria-controls="ftco-nav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="oi oi-menu"></span> Menu
        </button>

        <div class="collapse navbar-collapse" id="ftco-nav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="/adminLogout" class="nav-link">Cerrar Sesi贸n</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- END nav -->

    <script>
      $(document).ready(function() {
        $("#registerAddress").click(function() {
          const inputLatitude = $('[name="latitude"]')[2];
          inputLatitude.value = latitude;
          const inputLongitude = $('[name="longitude"]')[2];
          inputLongitude.value = longitude;
          $("#registerAddressClose").click();
        });
      });
    </script>

    <section class="home-slider owl-carousel">
      <div
        class="slider-item"
        style="background-image: url('images/after-business-hours-architecture-bar-34650.jpg');"
        data-stellar-background-ratio="0.5"
      >
        <div class="overlay"></div>
        <div class="container">
          <div
            class="row slider-text align-items-center justify-content-center"
          >
            <div class="col-md-10 col-sm-12 ftco-animate text-center">
              <div class="col-sm-6 mx-auto">
                <h2 class="h4 mb-4" style="color:white; padding-top: 10%">
                  Registrar Tienda
                </h2>
                <form action="/admins/registerBranch" method="POST">
                  <span class="price">Cadena:</span>
                  <div class="form-group">
                    <select name="restaurantchain_id">
                      <% for(let i=0; i < restaurantChains.length; i++) { %>
                      <option value="<%= restaurantChains[i].id %>"
                        ><%= restaurantChains[i].name %></option
                      >
                      <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <span
                      class="price"
                      data-toggle="modal"
                      data-target="#exampleModal"
                      >Abrir Mapa</span
                    >
                  </div>
                  <div class="form-group">
                    <input
                      id="latitude"
                      type="text"
                      class="form-control"
                      name="latitude"
                      placeholder="Latitud"
                      style="display:none"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      id="longitude"
                      type="text"
                      class="form-control"
                      name="longitude"
                      placeholder="Longitud"
                      style="display:none"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control"
                      name="name"
                      placeholder="Nombre"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control"
                      name="address"
                      placeholder="Direcci贸n"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      type="text"
                      class="form-control"
                      name="url_image"
                      placeholder="URL Imagen"
                    />
                  </div>
                  <span class="price">Hora Apertura::</span>
                  <div class="form-group">
                    <select name="opening_time">
                      <option value="07:00:00">07:00:00</option>
                      <option value="08:00:00">08:00:00</option>
                      <option value="09:00:00">09:00:00</option>
                      <option value="10:00:00">10:00:00</option>
                    </select>
                  </div>
                  <span class="price">Hora Cierre:</span>
                  <div class="form-group">
                    <select name="closing_time">
                      <option value="19:00:00">19:00:00</option>
                      <option value="20:00:00">20:00:00</option>
                      <option value="21:00:00">21:00:00</option>
                      <option value="22:00:00">22:00:00</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <input
                      type="submit"
                      value="Registrar"
                      class="btn btn-primary py-3 px-5"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              Ingresar Ubicaci贸n:
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <input
              id="pac-input"
              class="controls"
              type="text"
              placeholder="Ingresa tu ubicaci贸n"
            />
            <div id="map"></div>
          </div>
          <div class="modal-footer">
            <button
              id="registerAddressClose"
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Cerrar
            </button>
            <form>
              <button
                id="registerAddress"
                type="button"
                class="btn btn-primary"
              >
                Registrar
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <footer class="ftco-footer ftco-bg-dark ftco-section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <p>
              <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
